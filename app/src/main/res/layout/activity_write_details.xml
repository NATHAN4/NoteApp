<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="projects.noteapp.WriteDetailsActivity"
        android:id="@+id/layout">

        <TextView android:text="New Note Details" android:layout_width="fill_parent"
            android:id="@+id/title"
            android:textSize="40dp"
            android:gravity="center_horizontal"
            android:layout_height="80dp"
            android:paddingTop="15dp"
            android:background="@color/PINK"
            android:textColor="@color/background"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleBox"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:hint="Note Title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionBox"
            android:hint="Note Desciption"
            android:layout_below="@+id/titleBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_alignRight="@+id/titleBox"
            android:layout_alignEnd="@+id/titleBox"
            android:layout_marginLeft="16dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagsBox"
            android:hint="Tags"
            android:singleLine="true"
            android:layout_below="@+id/descriptionBox"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/addButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/addButton"
            android:layout_alignBottom="@+id/tagsBox"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"/>

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="projects.noteapp.ScrollViewExtended"
            android:id="@+id/tagsScroll"
            android:layout_below="@+id/tagsBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/uploadButton"
            android:layout_below="@+id/tagsBox"
            android:layout_marginTop="160dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>
</ScrollView>
