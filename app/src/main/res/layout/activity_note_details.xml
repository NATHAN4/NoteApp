<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="projects.noteapp.NoteDetailsActivity"
    android:id="@+id/layout">

    <TextView
        android:text="Note Details"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:paddingTop="15dp"
        android:id="@+id/ActivityTitle"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/background"
        android:background="#9933FF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:id="@+id/titleHead"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:layout_below="@+id/ActivityTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleField"
        android:textSize="30dp"
        android:layout_alignTop="@+id/titleHead"
        android:layout_toRightOf="@+id/titleHead"
        android:layout_toEndOf="@+id/titleHead"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="41dp"
        android:singleLine="true"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desc.:"
        android:id="@+id/descriptionHead"
        android:textSize="30dp"
        android:layout_below="@+id/titleHead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionField"
        android:textSize="30dp"
        android:singleLine="true"
        android:layout_below="@+id/titleField"
        android:layout_alignLeft="@+id/titleField"
        android:layout_alignStart="@+id/titleField"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags:"
        android:id="@+id/tagsHead"
        android:textSize="30dp"
        android:layout_below="@+id/descriptionHead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tagsField"
        android:textSize="30dp"
        android:singleLine="true"
        android:layout_below="@+id/descriptionField"
        android:layout_alignLeft="@+id/descriptionField"
        android:layout_alignStart="@+id/descriptionField"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/dateHead"
        android:textSize="30dp"
        android:layout_below="@+id/tagsHead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateField"
        android:textSize="30dp"
        android:singleLine="true"
        android:layout_alignTop="@+id/dateHead"
        android:layout_alignLeft="@+id/tagsField"
        android:layout_alignStart="@+id/tagsField"
        android:layout_marginRight="16dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:layout_below="@+id/dateField"
        android:paddingRight="5dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dateField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableLayout"
            android:background="@color/background"
            android:paddingLeft="16dp"
            android:paddingRight="21dp"
            android:stretchColumns="1"
            ></TableLayout>
    </ScrollView>



</RelativeLayout>
